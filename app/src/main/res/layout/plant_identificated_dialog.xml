<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtPlantIdentificated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Prueba"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/imagePlantIdentificated1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="49dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagePlantIdentificated2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagePlantIdentificated2"
        app:layout_constraintTop_toTopOf="@+id/imagePlantIdentificated2"
        app:layout_constraintVertical_bias="1.0"></ImageView>

    <ImageView
        android:id="@+id/imagePlantIdentificated2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        app:layout_constraintEnd_toStartOf="@+id/imagePlantIdentificated1"
        app:layout_constraintStart_toEndOf="@+id/imagePlantIdentificated3"></ImageView>

    <ImageView
        android:id="@+id/imagePlantIdentificated3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagePlantIdentificated2"
        app:layout_constraintEnd_toStartOf="@+id/imagePlantIdentificated2"
        app:layout_constraintStart_toEndOf="@+id/imagePlantIdentificated4"
        app:layout_constraintTop_toTopOf="@+id/imagePlantIdentificated2"></ImageView>

    <ImageView
        android:id="@+id/imagePlantIdentificated4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagePlantIdentificated3"
        app:layout_constraintEnd_toStartOf="@+id/imagePlantIdentificated3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePlantIdentificated3"></ImageView>

    <ImageButton
        android:id="@+id/btnPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:backgroundTint="#22ba64"
        android:src="@drawable/ic__navigate_before"
        app:layout_constraintStart_toStartOf="@+id/imagePlantIdentificated4"
        app:layout_constraintTop_toBottomOf="@+id/imagePlantIdentificated4"></ImageButton>

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:backgroundTint="#22ba64"
        android:src="@drawable/ic__navigate_next"
        app:layout_constraintEnd_toEndOf="@+id/imagePlantIdentificated1"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>